#include <iostream>
using namespace std;
int main(){

int sueldo, horas, extra, extra2,sueldof,sueldov;
	cout<<"Escriba su sueldo adquirido:";
	cin>>sueldo;
	cout<<"Escriba sus horas trabajadas:";
	cin>>horas;
	if (horas<41){
	    sueldof=horas*sueldo;
		cout<<"Su sueldo es de: "<< sueldof;
	}
	else if (horas>49){
	    sueldof=horas*sueldo;
		extra=sueldo*.50;
		sueldov=sueldof+extra;
		cout<<"Su sueldo es de:  \n"<< sueldov;
	}
	if(horas>79){
	    sueldof=horas*sueldo;
		extra2=sueldo*2;
		sueldo=sueldov+extra2;
		cout<<"Su sueldo es de:  \n"<< extra2;
	}
	return 0;
}
